{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "listFiles": false,
    "rootDir": "./src",
    "lib": ["es2015", "es2016", "es2017"],
    "outDir": "./lib"
  },
  "include": ["./src"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs"
  }
}
