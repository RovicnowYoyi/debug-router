checker-config:
  file-type-checker:
    binary-files-allow-list:
      - 'test/e2e_test/ios_example/Assets.xcassets/AppIcon.appiconset/*'
      - 'test/e2e_test/android_example/app/src/main/res/*'
      - 'test/e2e_test/android_example/gradle/wrapper/gradle-wrapper.jar'
      - 'test/e2e_test/ios_example/Provisions/LynxDevToolsDebugRouterDis.mobileprovision'

  coding-style-checker:
    ignore-suffixes:
      - '_jni.h'
      - 'pnpm-lock.yaml'
      - 'Podfile.yml'
      - '.d.ts'
      - '.r.ts'
    ignore-dirs:
      - '^third_party/*'
      - '^build/*'
